root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 9000
tab_width = 4

[*.scss]
indent_size = 4

[{*.ats,*.cts,*.mts,*.ts}]
indent_size = 4
tab_width = 4

[{*.bash,*.sh,*.zsh}]
indent_size = 4
tab_width = 4

[{*.cjs,*.es6,*.js,*.mjs}]
indent_size = 4
tab_width = 4

[{*.har,*.jsb2,*.jsb3,*.json,*.jsonc,*.postman_collection,*.postman_collection.json,*.postman_environment,*.postman_environment.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,.ws-context,jest.config}]
indent_size = 4

[{*.htm,*.html,*.sht,*.shtm,*.shtml}]
indent_size = 4
tab_width = 4

[{*.yaml,*.yml}]
indent_size = 4
